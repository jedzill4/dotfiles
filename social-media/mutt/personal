## Receive options.
set imap_user=raulonco@gmail.com
set imap_pass=$my_personal
set folder = imaps://raulonco@imap.gmail.com/
set spoolfile = +INBOX
set postponed = +Drafts
set record = +Sent

## Send options.
set smtp_url=smtps://rbarriga:$my_personal@smtp.gmail.com
set realname='Raul Barriga'
set from=raulonco@gmail.com
set hostname="gmail.com"
set signature="Raul Barriga"
# Connection options
set ssl_force_tls = yes
unset ssl_starttls

## Hook -- IMPORTANT!
account-hook $folder "set imap_user=raulonco@gmail.com imap_pass=$my_personal"
