# ..: CPU  :..
${color A5C80C}${voffset 0}${offset 4}${font Nimbus Mono:style=Bold:size=15}NETWORK ${font} 
${color d7d7d7}${offset 0}${voffset -3}${hr 2}${offset 0}${voffset 3}${cpugraph cpu6 17,1}

${offset 10}${voffset -23}${color}eth state: ${alignr}${offset -10}${execi 10 echo $(python ~/.conky/eth-wlan-status.py eth)}
${offset 10}${color}wlan state: ${alignr}${offset -10}${execi 10 echo $(python ~/.conky/eth-wlan-status.py wlan)}
${offset 10}${color}gateway IP: ${alignr}${offset -10}${gw_ip}
${offset 10}${color}local IP: $alignr${offset -10}${execi 10800 ip addr show | grep inet | sed -n '3p' | awk '{print $2}'}
${offset 10}${color}public IP: $alignr ${offset -10} ${execi 60 ~/.conky/ip.sh}
